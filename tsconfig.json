{
  "compilerOptions": {
    "outDir": "./contract/",
    "module": "esnext",
    "target": "es2017",
    "lib": ["es6", "es7", "dom"],
    "declaration": true,
    "sourceMap": false,
    "allowJs": false,
    "moduleResolution": "node",
    "rootDir": "./build/contracts/",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules",
    "migrations",
    "test"
  ]
}
